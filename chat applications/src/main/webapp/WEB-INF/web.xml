

<element>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>FriendRequestApp</display-name>
    
<servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>reg.RegisterServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/register</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>reg.LoginServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>FriendRequestServlet</servlet-name>
    <servlet-class>reg.FriendRequestServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>FriendRequestServlet</servlet-name>
    <url-pattern>/friendRequests</url-pattern>
</servlet-mapping>

    <servlet>
        <servlet-name>SendRequestServlet</servlet-name>
        <servlet-class>reg.SendRequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SendRequestServlet</servlet-name>
        <url-pattern>/sendRequest</url-pattern>
    </servlet-mapping>
    <servlet>
    <servlet-name>SendRequestServlet</servlet-name>
    <servlet-class>reg.SendRequestServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>SendRequestServlet</servlet-name>
    <url-pattern>/sendRequest</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>ApproveRequestServlet</servlet-name>
    <servlet-class>reg.ApproveRequestServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>ApproveRequestServlet</servlet-name>
    <url-pattern>/approveRequest</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>ChatServer</servlet-name>
    <servlet-class>reg.ChatServer</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>ChatServer</servlet-name>
    <url-pattern>/chat</url-pattern>
</servlet-mapping>
</web-app>
</element>